<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SubtractBalance" >

    <TextView
        android:id="@+id/accountView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <Button
        android:id="@+id/subBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cancelBut3"
        android:layout_alignBottom="@+id/cancelBut3"
        android:layout_alignLeft="@+id/balanceBox"
        android:text="Withdraw" />

    <Button
        android:id="@+id/cancelBut3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/subBut"
        android:text="Cancel" />

    <Button
        android:id="@+id/transBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/subBut"
        android:layout_alignLeft="@+id/subBut"
        android:layout_alignRight="@+id/cancelBut3"
        android:layout_marginBottom="66dp"
        android:text="Transaction Date" />

    <EditText
        android:id="@+id/balanceBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/transBut"
        android:layout_alignLeft="@+id/transBut"
        android:layout_marginBottom="38dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/expense" />

</RelativeLayout>
