<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".generateReport" >

    <Button
        android:id="@+id/buttonSelectEndDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:text="Select Ending Date"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonSelectBeginDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonSelectEndDate"
        android:layout_alignLeft="@+id/buttonSelectEndDate"
        android:layout_marginBottom="68dp"
        android:text="Select Start Date"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonSelectBeginDate"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Select Dates for Report:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button_return"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonSelectEndDate"
        android:layout_centerVertical="true"
        android:text="Return" />

</RelativeLayout>